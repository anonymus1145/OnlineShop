@model ProductVM

<form method="post" class="row" enctype="multipart/form-data">
  <input asp-for="Product.Id" hidden />
  <input asp-for="Product.ImageUrl" hidden />
  <div class="row">
    <div class="col-10">
      <div>
        <h2 class="text-primary">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
        <hr />
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.Nume" class="p-0"></label>
        <input asp-for="Product.Nume" type="text" class="form-control" />
        <span asp-validation-for="Product.Nume" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.ModelCompatibil" class="p-0"></label>
        <input asp-for="Product.ModelCompatibil" type="text" class="form-control" />
        <span asp-validation-for="Product.ModelCompatibil" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.Producator" class="p-0"></label>
        <input asp-for="Product.Producator" type="text" class="form-control" />
        <span asp-validation-for="Product.Producator" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.Descriere" class="p-0"></label>
        <textarea asp-for="Product.Descriere" class="p-0"></textarea>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.CodProdus" class="p-0"></label>
        <input asp-for="Product.CodProdus" type="text" class="form-control" />
        <span asp-validation-for="Product.CodProdus" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.Culoare" class="p-0"></label>
        <input asp-for="Product.Culoare" type="text" class="form-control" />
        <span asp-validation-for="Product.Culoare" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.ListPrice" class="p-0"></label>
        <input asp-for="Product.ListPrice" type="text" class="form-control" />
        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.Price" class="p-0"></label>
        <input asp-for="Product.Price" type="text" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.Price3" class="p-0"></label>
        <input asp-for="Product.Price3" type="text" class="form-control" />
        <span asp-validation-for="Product.Price3" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.CategoryId" class="p-0"></label>
        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
          <option disable selecte>--Select Category--</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
      </div>
      <div class="mb-3 row p-1">
        <label asp-for="Product.ImageUrl" class="p-0"></label>
        <input type="file" name="file" class="p-0" />
      </div>
      <div>
        <div class="row">
          <div class="col-6 col-md-3">
            @if (Model.Product.Id != 0)
            {
              <button type="submit" class="btn btn-primary" form-control">Update</button>
            }
            else
            {
              <button type="submit" class="btn btn-primary" form-control">Create</button>
            }
          </div>
          <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" border form-control>
              Back to List
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-2">
      <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border:1px solid" />
    </div>
  </div>

</form>

@section Scripts{
  <script>
    tinymce.init({
      selector: 'textarea',
      plugins: 'mentions autolink charmap codesample emoticons lists table wordcount checklist mediaembed casechange export formatpainter pageembed permanentpen footnotes advtemplate advtable advcode editimage tableofcontents mergetags powerpaste tinymcespellchecker autocorrect a11ychecker typography inlinecss',
      toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | tinycomments | checklist numlist bullist indent outdent | code',
      elementpath: false,
      force_br_newlines: false,
      force_p_newlines: false,
      forced_root_block: false,
    });
  </script>
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}

